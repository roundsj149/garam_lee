@charset "UTF-8";

.request-box {
 	min-width:500px;
 	max-width:70vw;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items:center;
	align-self: center;
}

#frm {
	align-self:flex-start;
}

.form-content {
	height:40px;
	display:grid;
	grid-template-columns:1fr 2fr 2fr;
	margin: 0.1rem;
	margin-bottom: 0.7rem;
	padding: 0.1rem;
	align-items:center;
}

.info {
	padding-top:0;
	padding-bottom:0;
	padding-left:0;
}

.radio-button {
	padding-top: 0;
	padding-bottom: 0;
}

.datepicker { 
    z-index: 999 !important;
}

#endDate, #endRadioBtn {
	visibility:hidden;
}

label {
	margin:0;
}

#modal-align {
	top: 20%;
	text-align:center;
  	
}

.request-button {
	margin: 0.2rem;
	margin-bottom: 0.7rem;
	text-align:right;
}

.datepicker table tr td.disabled, .datepicker table tr td.disabled:hover {
	color: #ff9393 !important;
}


