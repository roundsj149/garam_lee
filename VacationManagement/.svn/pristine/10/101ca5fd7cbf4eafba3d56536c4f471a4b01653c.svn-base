<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dayside.vacation.member.mapper.MemberMapper">

	<!-- 회원 가입 -->
	<insert id="insertMemberInfo">
	<![CDATA[
		INSERT INTO DAYSIDE_MEMBER 
		VALUES(
				#{employeeNo}, 
				#{emailId}, 
				#{fullname}, 
				#{pw}, 
				#{hashSalt}, 
				#{team}, 
				#{leaderYn}, 
				#{adminYn}, 
				SYSDATE, 
				'JOIN_REQUEST')
	]]>
	</insert>
	<!-- 동일한 아이디 확인(리턴타입 Member) -->
	<resultMap type="Map" id="idCheck">
		<id column="EMAIL_ID" property="emailId" />
		<id column="PW" property="pw" />
		<id column="EMPLOYEE_NO" property="employeeNo" />
		<id column="JOIN_STATUS" property="joinStatus" />
		<id column="HASH_SALT" property="hashSalt" />
	</resultMap>
	<select id="selectId" resultMap="idCheck">
	<![CDATA[
		SELECT EMAIL_ID, PW, EMPLOYEE_NO, JOIN_STATUS, HASH_SALT 
		FROM DAYSIDE_MEMBER
		WHERE EMAIL_ID = #{emailId}
	]]>
	</select>
	<!-- 사번 중복 확인 -->
	<select id="selectEmployeeNo" resultType="String">
	<![CDATA[
		SELECT EMPLOYEE_NO FROM DAYSIDE_MEMBER
		WHERE EMPLOYEE_NO = #{employeeNo}
	]]>
	</select>
	
		<!-- 아이디 중복 확인(리턴타입 String) -->
	<select id="selectEmailId" resultType="String">
	<![CDATA[
		SELECT EMAIL_ID FROM DAYSIDE_MEMBER
		WHERE EMAIL_ID = #{emailId}
	]]>
	</select>
	<!-- 소속팀명 조회 -->
	<select id="selectAllTeam" resultType="String">
	<![CDATA[
		SELECT CODE_ID FROM DAYSIDE_CODE
		WHERE CODE_GROUP_ID='TEAM'
	]]>
	</select>
	<!-- 사번, 이름 가져오기 -->
	<resultMap type="Map" id="noNameMap">
		<id column="EMPLOYEE_NO" property="employeeNo" />
		<id column="FULLNAME" property="fullname" />
	</resultMap>
	<select id="selectNoName" resultMap="noNameMap">
	<![CDATA[
		SELECT EMPLOYEE_NO, FULLNAME
		FROM DAYSIDE_MEMBER
		WHERE EMPLOYEE_NO=#{employeeNo}
	]]>
	</select>
	<!-- 관리자 여부 확인 -->
	<select id="selectAdminYN" resultType="String">
	<![CDATA[
		SELECT ADMIN_YN
		FROM DAYSIDE_MEMBER
		WHERE EMPLOYEE_NO=#{employeeNo}
	]]>
	</select>
	<!-- 이름 검색 -->
	<select id="selectEmployeeNoByFullname" resultType="String">
	<![CDATA[
		SELECT EMPLOYEE_NO 
		FROM DAYSIDE_MEMBER 
		WHERE FULLNAME LIKE '%'||#{searchWord}||'%'
	]]>
	</select>
	<!-- 비밀번호, salt 가져오기 -->
	<resultMap type="Map" id="pwSaltMap">
		<id column="PW" property="pw" />
		<id column="HASH_SALT" property="hashSalt" />
	</resultMap>
	<select id="selectPwSalt" resultMap="pwSaltMap">
	<![CDATA[
		SELECT PW, HASH_SALT
		FROM DAYSIDE_MEMBER
		WHERE EMPLOYEE_NO=#{employeeNo}
	]]>
	</select>
	<!-- 비밀번호 수정 -->
	<update id="updatePw">
		UPDATE DAYSIDE_MEMBER 
		SET PW = #{pw} WHERE EMPLOYEE_NO=#{employeeNo}
	</update>
	
	
	
	
	<!-- applyNoTest -->
	<insert id="applyNoTest" flushCache="true" >
	<![CDATA[
		INSERT INTO /* MemberMapper.xml applyNoTest */  DAYSIDE_VACATION 
		SELECT TO_CHAR(SYSDATE, 'YYYYMMDD-HH24MI-')||TO_CHAR(COUNT(VACATION_APPLY_NO)+1,'009')
			,'120002'
			,SYSDATE
			,SYSDATE
			,SYSDATE
			,'ALLDAY' 
			,1 
			,'VACATION_REQUEST' 
		FROM DAYSIDE_VACATION 
		WHERE APPLY_DT BETWEEN TO_DATE(TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24MI'),'YYYY-MM-DD HH24MI') 
			 AND  TO_DATE(TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24MI'),'YYYY-MM-DD HH24MI') + (INTERVAL '1' minute)		     
	]]>
	</insert>
	
	<!-- applyNoTest -->
	<insert id="applyNoTest1" flushCache="true" >
	<![CDATA[
		INSERT  /* MemberMapper.xml applyNoTest1 */
		    INTO DAYSIDE_VACATION (
					VACATION_APPLY_NO
					,EMPLOYEE_NO
					,APPLY_DT
					,START_DT
					,END_DT
					,VACATION_TYPE
					,COUNT_DAYS
					,VACATION_STATUS
		    )
		VALUES ( TO_CHAR(SYSDATE, 'YYYYMMDD-HH24MI-')||TO_CHAR(TEST_TABLE_SEQ.NEXTVAL, '009')
			,'120002'
			,SYSDATE
			,SYSDATE
			,SYSDATE
			,'ALLDAY' 
			,1 
			,'VACATION_REQUEST' )			     
	]]>
	</insert>
	
	<!-- applyNoTest -->
	<insert id="applyNoTest2" flushCache="true" parameterType="String">
	<![CDATA[
		INSERT  /* MemberMapper.xml applyNoTest2 */
		    INTO DAYSIDE_VACATION ( 
					VACATION_APPLY_NO
					,EMPLOYEE_NO
					,APPLY_DT
					,START_DT
					,END_DT
					,VACATION_TYPE
					,COUNT_DAYS
					,VACATION_STATUS
		    )
		VALUES ( #{vacationApplyNo} 
			,'120002'
			,SYSDATE
			,SYSDATE
			,SYSDATE
			,'ALLDAY' 
			,1 
			,'VACATION_REQUEST' )	
	     
	]]>
	</insert>
	<!-- 휴가 신청 시퀀스(테스트용) -->
	<select id="getVacationApplyNo" resultType="int">
    	SELECT TEST_TABLE_SEQ.NEXTVAL FROM DUAL
	</select>

</mapper>








