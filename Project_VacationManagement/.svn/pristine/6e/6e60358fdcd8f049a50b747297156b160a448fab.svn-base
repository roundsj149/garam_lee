@charset "UTF-8";

html {
	margin:0;
	padding:0;
	min-width:25rem;
    background: #1b1c1d;
    -ms-user-select: none;
	-moz-user-select: -moz-none;
	-khtml-user-select: none;
	-webkit-user-select: none;
	user-select: none;
}

body {
    min-height: 100%;
    margin:0;
	padding:0;
}

.container {
	min-height: 85vh;
	display:flex;
	flex-direction: column;
	justify-content: center;
	align-items:center;
	padding-top: 15vh;
	padding-bottom:10vh;
}

.title-box {
	display:flex;
	justify-content:center;
	align-items:center;
	padding: 0;
	margin-bottom: 2rem;
}

h3 {
	margin:0;
}

.logo {
	padding-left:0;
}

