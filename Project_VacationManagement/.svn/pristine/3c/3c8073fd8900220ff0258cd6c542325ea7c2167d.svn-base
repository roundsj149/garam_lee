@charset "UTF-8";

.list-box {
 	min-width:500px;
 	max-width:70vw;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items:center;
	align-self: center;
}

.form-content {
	min-height:42vh;
	min-width:500px;
	text-align:center;
}

#menuBox {
	display:grid; 
	grid-template-columns:auto 1fr;
	align-items:center;
	padding-left:0px;
	padding-right:0px;
}

select {
	height:30px;
}

#searchBox {
	height:40px;
	display:grid;
	grid-template-columns:1fr 3fr 1fr;
	align-items:center;
	padding:0px;
}


label {
	margin:0;
}
#searchBtn {
	margin-left:1rem;
}

table {
	min-width:60vw;
	margin-left: auto;
    margin-right: auto;
}

.table td, .table {
	vertical-align:middle;
}

th, td {
	padding:10px;
}

.vacation-list {
	 cursor:pointer;
}

.vacation-content {
	 text-align:left;
}

.modal-body {
	text-align:left;
}

#cnt {
	text-align:right; 
	padding:0;
	visibility:hidden;
}

.button-box {
	align-self:flex-end;
}